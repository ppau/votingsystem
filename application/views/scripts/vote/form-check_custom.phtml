$options = unserialize($this->question->options);
?>
<?php if(is_array($options) && !empty($options)): ?>
	<?php foreach($options as $option): ?>
		<b><?php echo $this->escape($option) ?>:</b>
		<input type="radio" name="<?php echo $this->question->id ?>" value="<?php echo $option ?>" />
	<?php endforeach ?>
<?php endif ?>
