<?php
$options = json_decode($this->question->options);
?>
<?php if(is_array($options) && !empty($options)): ?>
	<?php foreach($options as $option): ?>
		<input type="radio" name="<?php echo $this->question->name ?>" value="<?php echo $option ?>" />
		<b><?php echo $this->escape($option) ?></b>
		&nbsp;&nbsp;&nbsp;
	<?php endforeach ?>
<?php endif ?>
